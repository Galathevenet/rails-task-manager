<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>
  <%= @task.completed %>
  <% if @task.completed == false %>
    <%= "This task is not completed yet" %>
  <% else %>
    <%= "This task is complete !" %>
  <% end %>
</p>

<%= link_to "Edit your task", task_edit_path %>
<%= link_to "Back to your tasks list", tasks_path %>
